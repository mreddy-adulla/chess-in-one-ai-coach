<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#E2E8F0"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Annotation"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#94A3B8"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvOriginalAnnotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I was looking for tactics here..."
        android:background="#F8FAFC"
        android:padding="12dp"
        android:fontStyle="italic"
        android:textColor="#64748B"
        android:layout_marginBottom="24dp"/>

    <View
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:background="#1E293B"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What did your opponent intend with their last move?"
        android:textSize="18sp"
        android:textColor="#1E293B"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your reflection..."
        android:minLines="5"
        android:gravity="top"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSubmitAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:backgroundTint="#1E293B"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSkipQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip"
            android:backgroundTint="#F1F5F9"
            android:textColor="#64748B"/>
    </LinearLayout>

</LinearLayout>
