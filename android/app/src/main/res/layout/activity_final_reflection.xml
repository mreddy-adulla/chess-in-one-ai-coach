<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Reflection"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How You Were Thinking"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#94A3B8"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/tvThinkingPatterns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thinking patterns content..."
            android:lineSpacingExtra="4dp"
            android:textColor="#334155"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Was Missing"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#94A3B8"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/tvMissingElements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Missing elements content..."
            android:lineSpacingExtra="4dp"
            android:textColor="#334155"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F1F5F9"
            android:padding="20dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggested Habits"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#64748B"
                android:textAllCaps="true"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvHabits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Habit 1\n• Habit 2"
                android:lineSpacingExtra="4dp"
                android:textStyle="bold"
                android:textColor="#0F172A"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnBackToList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Game List"
            android:layout_marginTop="40dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>
</ScrollView>
