<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Game"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Color"
        android:layout_marginBottom="4dp"/>
    <Spinner
        android:id="@+id/spinnerColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent Name"
        android:layout_marginBottom="4dp"/>
    <EditText
        android:id="@+id/etOpponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event"
        android:layout_marginBottom="4dp"/>
    <EditText
        android:id="@+id/etEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Optional"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Control"
        android:layout_marginBottom="4dp"/>
    <EditText
        android:id="@+id/etTimeControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. 15+10"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:backgroundTint="#1E293B"/>

</LinearLayout>
